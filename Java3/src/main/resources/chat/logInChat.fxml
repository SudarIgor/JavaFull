<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="300.0" prefWidth="200.0" style="-fx-background-color: #666666;"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chat.LogInChatController">
      <Label layoutX="34.0" layoutY="14.0" prefHeight="40.0" prefWidth="130.0" text="Log in to the chat" textAlignment="RIGHT" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>

      <Label layoutX="25.0" layoutY="120.0" prefHeight="20.0" prefWidth="100.0" text="Password:" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>

      <Label layoutX="25.0" layoutY="63.0" prefHeight="20.0" prefWidth="100.0" text="Login" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>

      <TextField fx:id="loginTF" layoutX="26.0" layoutY="83.0" prefHeight="25.0" prefWidth="150.0" />

      <PasswordField fx:id="passwordPF" layoutX="25.0" layoutY="140.0" onAction="#enter" prefHeight="25.0" prefWidth="150.0" />

    <Button fx:id="logInBt" layoutX="70.0" layoutY="181.0" mnemonicParsing="false" onAction="#enter" style="-fx-background-color: #777777;" text="Log in" textFill="#fffdfd">
      <font>
         <Font name="System Bold Italic" size="12.0" />
      </font></Button>

      <Button fx:id="registrationBt" layoutX="56.0" layoutY="220.0" mnemonicParsing="false" onAction="#registration" style="-fx-background-color: #777777;" text="Registration" textFill="WHITE">
    <font>
        <Font name="System Bold Italic" size="12.0" />
    </font></Button>

</AnchorPane>
